                    android:layout_height="wrap_content"
                    android:text="Indonesia"
                    android:gravity="left"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>
        </LinearLayout>


